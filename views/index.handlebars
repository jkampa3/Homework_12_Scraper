<header>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Scrape the NPR</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText"
            aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarText">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/">Scrape</a>
                </li>
            </ul>
        </div>
    </nav>

</header>

<div class="container">
    <div id="articlesSection" class="col-md-9">
	<span id="articlesTitle"> CURRENT STORIES </span>
	<div id="articlesDiv">

		{{#if articles}}

			{{#each articles}}
				<div class="col s12" data_id="{{this.id}}">
				    <div class="card horizontal">
				        <div class="card-image">
				        	<img src="{{this.img}}">
				     	</div>
					    <div class="card-stacked">
							<div class="card-content">
								<p class="article-title">{{{this.headline}}}</p>
								<p class="source">{{{this.source}}} -- </p>
								<span class="teaser">{{this.summary}}</span>
							</div>
							<div id="test" class="card-action">
					    	    <a class="" href="{{this.link}}" target="_blank">Read</a>
					    	</div>
						</div>
					</div>
				</div>
			{{/each}}

		{{else}}

			<p class="text-center"> There are no current articles to display. </p>
			    
		{{/if}}

	</div>
</div>
</div>



<footer class="page-footer">
    <div class="container">
        <div class="row">
            <a class="white-text"> &#169; JK</a>
        </div>
    </div>
</footer>